{
  "manifest_version": 2,

  "name": "Pwd",
  "description": "Xjz Chrome password generator.",
  "version": "0.2",

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
      "content_menu.js"
    ]
  },


  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": [
        "md5.js",
        "helper.js",
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
