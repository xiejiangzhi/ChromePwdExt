{
  "manifest_version": 2,

  "name": "Pwd",
  "description": "Xjz password generator.",
  "version": "0.1",

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "contextMenus"
  ],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
      "content_menu.js"
    ]
  },


  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
