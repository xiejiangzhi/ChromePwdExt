{
  "manifest_version": 2,

  "name": "Pwd",
  "description": "Xjz Chrome password generator.",
  "version": "0.3",

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],

  "browser_action": {
    "default_icon": {
      "19": "images/icon.png",
      "28": "images/icon.png"
    },
    "default_popup": "views/popup.html"
  },

  "background": {
    "scripts": [
      "javascripts/content_menu.js"
    ]
  },


  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "javascripts/md5.js",
        "javascripts/helper.js",
        "javascripts/content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
